<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("IT Training", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Enroll", "Index", "Course", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("View Schedule", "Index", "Schedule", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Contact Us", "Index", "Correspondence", new { area = "" }, null)</li>
                    @if(Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout","Logout","Account")</li>
                        <li>@Html.Action("UserNavPartial","Account", new { area = "" })</li>
                        <li>@Html.ActionLink("Manage Users", "Index", "ManageUser", new { area = "Admin" }, null)</li>
                        <li>@Html.ActionLink("Manage Sessions", "Index", "ManageSession", new { area = "Admin" }, null)</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Login","Login","Account")</li>
                    }
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
